#!/bin/sh

PATH=/env/bin
export PATH

. /env/config

# Turn on red LED
mw 0x90470000 0x0800e000

echo "Running DHCP client"
dhcp
if [ $? != 0 ]; then
	echo "DHCP failed."
	reset
	exit
fi

echo "Trying to tftp bootstrap script"
tftp gfrg2xx-recover/bootstrap
if [ $? != 0 ]; then
	echo "Cannot download bootstrap script."
	reset
	exit
fi

echo "Running bootstrap script"
./bootstrap
