#!/bin/sh

echo "TFTPing uImage and initrd"
tftp uImage
if [ $? != 0 ]; then
	echo "Failed to tftp uImage"
	exit
fi
tftp initrd
if [ $? != 0 ]; then
	echo "Failed to tftp initrd"
	exit
fi
echo "Erasing kernel partition"
erase /dev/nor0.kernel
echo "Copying new uImage into kernel partition"
cp uImage /dev/nor0.kernel
echo "Erasing initrd partition"
erase /dev/nor0.initrd
echo "Copying new initrd into initrd partition"
cp initrd /dev/nor0.initrd

